@model CHubMVC.Models.LoginViewModel

@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta charset="utf-8">
@*<link href="~/Scripts/bootstrap.css" rel="stylesheet">*@
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<title>@ViewBag.Title</title>

<body>

    @*<div id="BgImg" style="height: 70px; width:100%; background-image: url('../../Images/bg-header.png');">
            <a href="/home/index" title="HomePage">
                <img src="~/Images/cummins-logo-print.gif" style="margin-top:10px; margin-left:150px;height:50px;width:55px">
            </a>
        </div>*@

    <div class="container-fluid" style="height:80%;width:99%">
        <div class="row" style="margin-top:5%;height:100px;">
            <div class="col-md-6">
                <img src="~/Images/loginMidlogo.png" style="margin-left:40px;height:100px;width:auto">
            </div>
            <div class="col-md-6 text-right">
                <img src="~/Images/hubLogo.png" style="margin-right:12%;margin-top:25px;height:75px;width:auto">
            </div>
        </div>

        <div class="row" style="height:375px;">
            <div class="col-md-12 col-lg-12" style="height:375px;background-color:#C32518">
                <div class="row">

                    <div class="col-md-8 col-sm-7 text-right">
                        <img id="loginImg" src="~/Images/LongBg/bg_2.jpg">
                    </div>

                    <div class="col-md-3 col-sm-4">

                        <div class="panel panel-default" style="height:295px;width:255px;background-color:#eee;margin-top:40px">

                            <section id="loginForm">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                         {
                                        @Html.AntiForgeryToken()

                                        <div class="panel panel-default" style="height:75%;">
                                            <div class="form-group" style="margin-top:30px">

                                                <div class="input-append col-md-8 col-md-offset-2 col-sm-offset-2 col-sm-8 col-lg-10 col-lg-offset-1">
                                                    <label for="userName">User Name:</label>
                                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "userName", @placeholder = "Your WWID", @required = "required" })
                                                </div>
                                            </div>

                                            <div class="form-group" style="margin-top:30px">

                                                <div class="input-append col-md-8 col-md-offset-2 col-sm-offset-2 col-sm-8 col-lg-10 col-lg-offset-1">
                                                    <label for="pwd">PassWord:</label>
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "pwd", @placeholder = "Your CED Password" })
                                                    @Html.ValidationSummary()
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-append col-md-4 col-md-offset-2 col-sm-offset-2 col-sm-4 col-lg-4 col-lg-offset-1">
                                                <button class="btn btn-primary btn-block" style="background-color:brown" type="submit">LogIn</button>
                                            </div>
                                        </div>
                                        }
                            </section>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row text-center">
                <p>&copy; <strong>CPDC @DateTime.Now.Year</strong>.</p>
            </div>
            <div class="row text-center">
                <p><small>No portion of this website may be reproduced without the prior written consent of CPDC. All rights reserved.</small></p>
            </div>
        </div>
    </footer>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    $(document).ready(function () {
        var random_bg = Math.floor(Math.random() * 10 % 5) + 1;
        var bg = '../../Images/LongBg/bg_' + random_bg + '.jpg';
        $("#loginImg").attr("src", bg);
    });
</script>

