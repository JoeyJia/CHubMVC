<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    @*
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">*@
    @*
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1,user-scalable=no" />*@
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0,user-scalable=no" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/boostrapvalidate")
    @RenderSection("scripts", required: false)


    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }

        .navbar-nav > li > a {
            font-size: 16px;
        }

        .navbar {
            min-height: 30px;
        }
        .navbar-nav {
            margin:0;
        }
    </style>
    <style type="text/css">
        @@media all and (max-width:230px) {
            .navbar-collapse.collapse {
                display: block !important;
                height: auto !important;
                padding-bottom: 0;
                overflow: visible !important;
            }
        }

        @@media all and (max-width:230px) {
            .navbar-collapse {
                width: auto;
                border-top: 0;
                box-shadow: none;
            }
        }

        @@media all and (max-width:230px) {
            .navbar-nav {
                float: left;
                margin: 0;
            }
        }

        @@media all and (max-width:230px) {
            .navbar-nav > li {
                float: left;
            }
        }

        @@media all and (max-width:230px) {
            .navbar-right {
                float: right !important;
            }
        }

        @@media all and (max-width:230px) {
            .navbar-collapse .navbar-nav.navbar-right:last-child {
                margin-right: -5px;
            }
        }

        .navbar-collapse {
            padding-left: 0;
            padding-right: 0;
        }

        .navbar-nav > li {
            float: left;
            /*width: 70px;*/
        }
    </style>
     
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-collapse collapse ng-scope" ng-app="appLink" ng-controller="menuCtrl" style="display:block !important;">
                <ul class="nav navbar-nav" id="jt" style="display:none;width:30px;float:left;">
                   <!--<li><a class="navbar-brand" href="/Mobile/Home">Home</a></li>--> 
                    <li><span class="glyphicon glyphicon-chevron-left" style="margin: 5px 0 0 5px;color: rgb(153, 153, 153);cursor: pointer;width:  30px;height:  30px;font-size: 24px;"></span></li>
                </ul>
                @Html.Partial("_MobileLoginPartial")
            </div>
        </div>
    </div>



    @*<nav class="row navbar navbar-inverse" role="navigation">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav" id="jt" style="display:none;">
                    <li><a class="navbar-brand" href="/Mobile/Home">Home</a></li>
                    <li><span class="glyphicon glyphicon-chevron-left" style="margin: 5px 0 0 5px;color: rgb(153, 153, 153);cursor: pointer;width:  30px;height:  30px;font-size: 24px;"></span></li>
                </ul>
                @Html.Partial("_MobileLoginPartial")
            </div>
        </div>
    </nav>*@

    <div class="container-fluid" style="margin-top:60px;">
        @RenderBody()
    </div>

</body>
</html>
