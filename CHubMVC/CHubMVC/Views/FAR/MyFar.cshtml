                            </tr>
                            <tr>
                                <td class="tdBT">Period(年度)：<span class="xx">*</span></td>
                                <td>
                                    @*<input type="text" class="form-control input-sm" id="modalPERIOD" value="@ViewBag.PERIOD" />*@
