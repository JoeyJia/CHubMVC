            }
        }

        function resetFileImput() {
            var file = $("#fileImport");
            file.after(file.clone().val(""));
            file.remove();
        }


        //Download
        $("#btnDownload").on('click', function () {
            window.location.href = '/FAR/DownloadTemplate';
        })
        //Export
        $("#btnExport").on('click', function () {
            if (FAR_NO == "")
                return false;
            window.location.href = "/FAR/ExportFar?FAR_NO=" + FAR_NO;
        })
        //Upload
        $("#btnUpload").on('click', function () {
            var file = $("#fileImport").val();
            if (file == "") {
                alert("请选择需要导入的Excel");
                return false;
            }
            if (FAR_NO == "")
                return false;

            $("#loadingModal").modal("show");
            $("#btnUpload").button("loading");
            $("#farNew").ajaxSubmit({
                url: '/far/FarUpload',
                type: 'post',
                data: { FAR_NO: FAR_NO },
                dataType: 'json',
                success: function (data) {
                    $("#loadingModal").modal("hide");
                    $("#btnUpload").button("reset");
                    if (data.Success)
                        $("#modalDetailTbody").html(data.Data);
                    else
                        alert(data.Msg);
                },
                error: function (e) {
                    $("#loadingModal").modal("hide");
                    alert("文件上传失败");
