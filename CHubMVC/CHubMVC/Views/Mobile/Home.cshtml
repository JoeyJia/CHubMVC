@using CHubDBEntity;
@using CHubModel.WebArg
@{
    ViewBag.Title = "Mobile Home";
    Layout ="~/Views/Shared/_MobileLayout.cshtml";
}

<title>@ViewBag.Title</title>

<style type="text/css">
    .col-sm-3 {
        min-height:0;    
    }
    .menuList ul {
        list-style-type: none;
        zoom: 1;
    }

    .menuList .col-sm-2 {
        min-height: 0;
    }

    .menuList ul li {
        float: left;
        margin: 10px;
        display: inline;
        /*border: 1px solid #CCC;*/
        text-align: center;
    }

        .menuList ul li a img {
            width: 150px;
            /*padding: 5px;*/
            border: 0;
            /*display: block;*/
        }

        .menuList ul li a.wenzi {
            line-height: 20px;
            color: #666;
            display: block;
            text-align: center;
            font-size: 16px;
            margin-top: 10px;
            font-weight:bolder;
        }
</style>

<div class="container-fluid" style="width:100%;height:100%;">
    <div class="row" @*style="margin-top:80px"*@>
        <div class="col-sm-12" style="height:100%;">
            <div class="row">
                <div class="col-sm-12" style="padding-right:0px;">
                    <div class="panel panel-default text-center">
                        @foreach (var item in ViewBag.welcomeList)
                        {
                        <h3>@item.MOBILE_MSG</h3>
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12" style="padding-right:0px;">
                    @foreach(var item in ViewBag.pageList)
                    {
                    <div class="panel panel-default">
                        <div class="form-group">
                            <label for="" class="col-sm-12" style="font-size:16px;">@item.SPACE_DESC</label>
                            <div class="row menuList">
                                <div class="col-sm-12">
                                    @foreach(var page in item.pagelist)
                                    {
                                    <div class="col-sm-4 col-xs-4">
                                        <ul>
                                            <li>
                                                <a href="@page.URL"><img src="~/Images/ico/@page.ICON" style="width:50px;height:50px;" /></a>
                                                <a href="@page.URL" class="wenzi">@page.ICON_DESC</a>
                                            </li>
                                        </ul>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



