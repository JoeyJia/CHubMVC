@using CHubDBEntity;
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
a.NoLine:link { text-decoration: none}
a.NoLine:visited { text-decoration: none}
a.NoLine:hover {text-decoration: none}

.popover{
    max-width: 60%; /* Max Width of the popover (depending on the container!) */
}
</style>

<div class="container-fluid body-content">

    <div class="row">
        @*left Part*@
        <div class="col-md-12 col-lg-12">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default text-center">
                        @foreach (var item in ViewBag.welcomeList)
                        {
                            <h3>@item.WEL_MSG</h3>
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"><b>Recent Pages</b></div>

                        <form class="form-horizontal" role="form">
                            <div class="form-group" style="margin-left:10px;margin-top:10px;">
                                @foreach (var item in ViewBag.recentList)
                                {
                                    <div class="col-md-3">
                                        <p><a class="NoLine" href="@item.URL">@item.DISPLAY</a></p>
                                    </div>
                                    <div class="col-md-8">
                                        <p>@item.DESCRIPTION</p>
                                    </div>
                                }
                            </div>
                        </form>

                    </div>
                </div>
            </div>

            <div class="row" style="margin-top:0px;">
                <div class="col-md-12">
                    @*<p class="text-left"><strong>Notice</strong></p>*@

                    <div class="panel panel-default">
                        <div class="panel-heading"><b>Notice</b></div>
                        <table class="table  table-striped  table-hover" style="table-layout:fixed ">
                            <thead>
                                <tr>
                                    <th style="width:50px;word-wrap:break-word;">ID</th>
                                    <th style="width:auto;word-wrap:break-word;">Topic</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int index = 1;}
                                @foreach (var item in ViewBag.noticeList)
                                {
                                <tr>
                                    <td>@index</td>
                                    <td class="poptd" data-toggle="popover" data-trigger="hover" data-content="@item.NOTICE_TEXT" data-title="Notice Content" data-placement="top" data-container="td">@item.NOTICE_TOPIC</td>
                                </tr>
                                index++;
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>

    </div>



</div>


<script>

    //$(function () {
    //    $('[data-toggle="popover"]').popover()
    //})

    $(function () {
        $('.poptd').popover()
    })

</script>
