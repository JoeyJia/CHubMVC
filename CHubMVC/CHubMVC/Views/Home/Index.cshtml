@using CHubDBEntity;
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
a.NoLine:link { text-decoration: none}
a.NoLine:visited { text-decoration: none}
a.NoLine:hover {text-decoration: none}
</style>

<div class="container-fluid body-content">
    
    <div class="row">
        @*left Part*@
        <div class="col-md-8 col-lg-8">

            <div class="row">
                <div class="col-md-12">
                    @foreach (var item in ViewBag.welcomeList)
                    {
                        <h3>@item.WEL_MSG</h3>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="text-left"><strong>Recent Page</strong></p>
                    <dl class="dl-horizontal">
                        @foreach (var item in ViewBag.recentList)
                       {
                            <dt>
                                <p><a class="NoLine" href="@item.URL">@item.DISPLAY</a></p>
                            </dt>
                            <dd>
                                <p>@item.DESCRIPTION</p>
                            </dd>
                        }
                    </dl>

                </div>
            </div>

            </div>

        @*Right notice Part*@
        <div class="col-md-4 col-lg-4">

            <div class="row">
                <div class="col-md-12">
                    <p class="text-left"><strong>Notice</strong></p>

                    <div class="panel panel-default indexRight table-responsive">
                        <table  class="table  table-striped  table-hover" style="table-layout:fixed ">
                            <thead>
                                <tr>
                                    <th style="width:50px;word-wrap:break-word;">ID</th>
                                    <th class="text-center" style="width:auto;word-wrap:break-word;">Topic</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int index = 1;}
                                @foreach (var item in ViewBag.noticeList)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td class="poptd text-center" data-toggle="popover" data-trigger="hover" data-content="@item.NOTICE_TEXT" data-title="Notice Content" data-placement="left" data-container="td">@item.NOTICE_TOPIC</td>
                                    </tr>
                                    index++;
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
      </div>
    
   

</div>


<script>

    //$(function () {
    //    $('[data-toggle="popover"]').popover()
    //})

    $(function () {
        $('.poptd').popover()
    })

</script>
