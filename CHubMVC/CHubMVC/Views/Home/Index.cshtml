@using CHubDBEntity;
@using CHubModel;
@{
    var pageLists = ViewBag.pageList as List<PageList>;
}
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    a.NoLine:link {
        text-decoration: none;
    }

    a.NoLine:visited {
        text-decoration: none;
    }

    a.NoLine:hover {
        text-decoration: none;
    }

    .popover {
        max-width: 60%; /* Max Width of the popover (depending on the container!) */
    }

    b {
        font-size: 24px;
    }

    .box {
        width: 72px;
        text-align: center;
        height: 110px;
    }

        .box img {
            width: 72px;
            height: 72px;
            display: block;
        }
</style>

<style type="text/css">

</style>

<div class="container-fluid body-content">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default text-center">
                        @foreach (var item in ViewBag.welcomeList)
                        {
                            <h3>@item.WEL_MSG</h3>
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"><b>Recent</b></div>

                        <form class="form-horizontal" role="form">
                            <div class="form-group" style="margin-left:10px;margin-top:10px;">
                                @foreach (var item in ViewBag.recentList)
                                {
                                <div class="col-lg-1 col-md-2 col-sm-3 col-xs-4">
                                    <div class="box">
                                        <a href="@item.URL" title="@item.DESCRIPTION" target="_blank">
                                            <img src="~/Images/page_ico/@item.ICON" />
                                            @item.ICON_DESC
                                        </a>
                                    </div>
                                </div>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    @foreach (var pls in pageLists)
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading"><b>@pls.SPACE_DESC</b></div>
                        </div>

                        <form class="form-horizontal" role="form">
                            <div class="form-group" style="margin-left:10px;margin-top:10px;">
                                @foreach (var item in pls.pages)
                                {
                                    <div class="col-lg-1 col-md-2 col-sm-3 col-xs-4">
                                        <div class="box menuList">
                                            <a href="@item.URL" title="@item.DESCRIPTION" target="_blank">
                                                <img src="~/Images/page_ico/@item.ICON" />
                                                @item.ICON_DESC
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


