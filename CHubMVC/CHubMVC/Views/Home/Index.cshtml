        $(".menuList").on('click', 'a', function () {
            var $a = $(this);
            var url = $a.attr("href");
            $.ajax({
                url: '/home/LogPageClick',
                type: 'post',
                async: true,
                data: {
                    URL:url
                },
                dataType: 'json',
                success: function (obj) {
                    if (!obj.Success) {
                        alert(obj.Msg);
                    }
                },
                error: function (e) {
                    alert("fail to log");
                }
            });
        })

    })
</script>
