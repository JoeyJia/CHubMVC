
@{
    ViewBag.Title = "Custom Pack Print";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid" id="packBody" ng-app="packApp" ng-controller="packCtrl">
    <div class="panel panel-default">
        <div class="panel-heading" style="background-color:silver"><b>Custom Pack Print Panel </b></div>

        <form class="form-horizontal" id="searchForm">

            <div class="row" style="margin-top:30px;">
                <div class="form-group">
                    <label for="txtWhID" class="col-sm-2 control-label">Ware House</label>
                    <div class="col-sm-2">
                        <select class="form-control input-sm" id="txtWhID" ng-model="whID" ng-disabled="defWHID!=''&&defWHID!=null  " ng-options="w.WH_ID as w.WH_ID for w in appWHList"></select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="txtShipmentNo" class="col-sm-2 control-label">Shipment No.</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control input-sm" id="txtShipmentNo" ng-model="shipmentNo" placeholder="Shipment No.">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="txtCustName" class="col-sm-2 control-label">Customer Name</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control input-sm" id="txtCustName" ng-model="custName" placeholder="Customer Name">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="txtAddress" class="col-sm-2 control-label">Address</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control input-sm" id="txtAddress" ng-model="address" placeholder="Address">
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Status</label>
                    <div class="col-sm-2">
                        <label class="checkbox-inline">
                            <input type="radio" id="inlineradio1" ng-model="staged"  value="true">Staged
                        </label>
                        <label class="checkbox-inline">
                            <input type="radio" id="inlineradio2" ng-model="inProgress" value="true">All
                        </label>
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-primary btn-sm" ng-click="searchAction()">Search</button>
                    </div>
                </div>
            </div>

        </form>

        <!--result part-->
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="panel panel-default" style="">
                    <div class="panel-heading">
                        <b>Result</b>
                    </div>

                    <table id="tbCarMst" class="table table-striped table-hover table-bordered .table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="allCheckbox" value="allChecked" aria-label="checkAll">
                                        </label>
                                    </div>
                                </th>
                                <th style="">Index</th>
                                <th style="">Ship ID</th>
                                <th style="">Lod No.</th>
                                <th style="">Weight(kg)</th>
                                <th style="">Volume(M3)</th>
                                <th style="">Status</th>
                                <th style="">Track Num</th>
                                <th style="">Stage Date</th>
                                <th style="">Ship Date</th>
                                <th style="">Customer Name</th>
                                <th style="">Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="p in packArray ">
                                <td>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="checkbox$index" class="ckItems" aria-label="check$index">
                                        </label>
                                    </div>
                                </td>
                                <td style="">{{$index+1}}</td>
                                <td style="">{{p.SHIP_ID}}</td>
                                <td>{{p.LODNUM}}</td>
                                <td>{{p.VC_PALWGT}}</td>
                                <td>{{p.PALVOL}}</td>
                                <td>{{p.SHPSTS}}</td>
                                <td>{{p.TRACK_NUM}}</td>
                                <td>{{p.STGDTE}}</td>
                                <td>{{p.LODDTE}}</td>
                                <td>{{p.ADRNAM}}</td>
                                <td>{{p.ADRLN1}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>



    </div>
</div>


<script>
    
    angular.module('packApp', []).controller('packCtrl', function ($scope, $http) {
        $scope.whID = "";
        $scope.shipmentNo = "";
        $scope.custName = "";
        $scope.address = "";

    //
        $scope.staged = true;
        $scope.inProgress = false;
        $scope.range = 3;

        $scope.packArray = [];
        //init part 
        $scope.defWHID = "";
        $scope.appWHList = [];



        $http.post("/rp/PackInit", null, null).then(
            function (obj) {
                //debugger;
                if (obj.data.Success) {
                    $scope.defWHID = obj.data.Data.defWHID;
                    $scope.appWHList = obj.data.Data.appWHList;

                    $scope.whID = $scope.defWHID;
                }
                else
                    alert(obj.data.Msg)
            },
             function (resp) {
                 debugger;
                 alert("Fail!");
             }
            );


        $scope.searchAction = function () {
            if ($scope.whID == "")
                return;

            //alert("searched action!");
            //return;

            $.ajax({
                url: "/rp/GetPackList",
                data: {
                    whID: $scope.whID,
                    shipID: $scope.shipmentNo,
                    custName: $scope.custName,
                    address: $scope.address,
                    staged: $scope.staged,
                    range: $scope.range
                },
                type: "post",
                async: false,
                success: function (obj) {
                    //debugger;
                    $scope.packArray = obj.Data;
                },
                error: function (obj) {
                    alert("fail to get Data");
                }

            });
        };


    });

    //manual load app
    angular.bootstrap(document.getElementById("packBody"), ['packApp']);


</script>

