<script>
    
    angular.module('wbPrintApp', ['angucomplete']).controller('wbPrintCtrl', function ($scope, $http) {
        $scope.whID = "";
        //$scope.wbType = 'default';
        //$scope.stageDate = getDateString(new Date());
        $scope.carCode = "";
        $scope.custName = "";
        $scope.address = "";
        $scope.shipmentNo = "";

        $scope.wbHArray = [];
        //init part 
        $scope.defWHID = "";
        $scope.appWHList = [];
        $scope.carCodeList = [];

        $scope.level1 = [];
        $scope.level2 = [];


        $http.post("/rp/init", null, null).then(
            function (obj) {
                //debugger;
                if (obj.data.Success) {
                    $scope.defWHID = obj.data.Data.defWHID;
                    $scope.appWHList = obj.data.Data.appWHList;
                   
                    $scope.carCodeList = obj.data.Data.carCodeList;

                    $scope.whID = $scope.defWHID;
                }
                else
                    alert(obj.data.Msg)
            },
             function (resp) {
                 debugger;
                 alert("Fail!");
             }
            );


        $scope.searchAction = function () {
            if ($scope.whID == "")
                return;

            $('#tableResult').bootstrapTable('destroy');

            var realCarCode = "";
            if ($scope.carCode == "" || $scope.carCode==null)
                realCarCode = ""
            else
                realCarCode = $scope.carCode.originalObject.CarCode;



            $.ajax({
                url: "/rp/GetWayBillBaseList",
                data: {
                    whID: $scope.whID,
                    carCode: realCarCode,
                    custName: $scope.custName,
                    Address: $scope.address,
                    shipmentNo: $scope.shipmentNo,
                },
                type: "post",
                async: false,
                success: function (obj) {
                    //debugger;
                    $scope.level1 = obj.Data;
                    initPoTab()
                },
                error: function (obj) {
                    alert("fail to get Data");
                }

            });
        };

        //function getDateString(date) {
        //    return date.getFullYear() + "-" + (date.getMonth() + 1) + "-" + date.getDate();
        //}

        function initPoTab() {
            var $table = $('#tableResult');
            buildTable($table);
        };

        function expandlevel2($detail, pRow, index) {
            //debugger;
            var poNo = pRow.PUR_ORDER_ID;
            $t = $detail.html('<table data-click-to-select="true" class="tbLevel2" tag="level2" ></table>').find('table');
            //$t.attr("class", "table table-bordered table-condensed");
            $t.attr("margin-left", "200px");
            //debugger;
            var columns = [];
            var data = [];
            columns.push({
                field: 'state',
                checkbox: true,
                align: 'center',
                valign: 'middle'
            });
            columns.push({
                field: 'TRACK_NUM_IHUB',
                title: 'Track Num'

            });
            columns.push({
                field: 'SHIP_ID',
                title: 'Shipment No'
            });
            columns.push({
                field: 'SHPSTS',
                title: 'Status'
            });
            columns.push({
                field: 'STGDTE',
                title: 'Stage Date',
                formatter: dateFormatter
            });
            columns.push({
                field: 'ORDTYP',
                title: 'Order Type'
            });
            columns.push({
                field: 'BOXES',
                title: 'Boxes'
            });
            columns.push({
                field: 'VC_PALWGT',
                title: 'Weight'
            });
            columns.push({
                field: 'VOL_M3',
                title: 'Volumn(m3)'
            });
            columns.push({
                field: 'CUST_NO',
                title: 'Customer No'
            });
            columns.push({
                field: 'WAYBILL_ID',
                title: 'Way Bill ID'
            });
            columns.push({
                field: 'HOST_EXT_ID',
                title: 'Host Ext ID'
            });
            //var level2Data = [];
            //debugger;
            getLevel2Data(pRow.CARCOD, pRow.ORDTYP_WB, pRow.ADDR_COMBINED);

            $t.bootstrapTable({
                columns: columns,
                data: $scope.level2,
                detailView: false
            });
            $t.bootstrapTable('hideLoading');

        };

        function buildTable($t) {
            var columns = [];
            var data = [];

            //columns.push({
            //    field: 'state',
            //    checkbox: true,
            //    align: 'center',
            //    valign: 'middle'
            //});
            columns.push({
                field: 'ORDTYP_WB',
                title: 'Priority'
            });
            columns.push({
                field: 'CARCOD',
                title: 'Carrier Code'
            });
            columns.push({
                field: 'CARNAM',
                title: 'Carrier Name'
            });
            columns.push({
                field: 'ADDR_COMBINED',
                title: 'Address'
            });

            columns.push({
                field: '',
                title: 'Operation',
                width: '100',
                events: operateEvents,
                formatter: printOperationFormatter
            }
            );
            
            //columns.push({
            //    field: '',
            //    title: '',
            //    width: '1000'
            //});

            $t.bootstrapTable({
                columns: columns,
                data: $scope.level1,
                detailView: true,
                onExpandRow: function (index, row, $detail) {
                    expandlevel2($detail, row, index);
                }
            });
            $t.bootstrapTable('hideLoading');
        };


        //Formatter
        function dateFormatter(value, row, index) {
            if (value == undefined)
                return "";
            //if date has "()" not do format action
            if (value.indexOf(')') > 0)
                return value;

            if (value.length < 10)
                return value;
            return value.substr(0, 10);
        }

        function printOperationFormatter(value, row, index) {
            return [
           '<a class="print" href="javascript:void(0)" title="Print">',
           '<i class="glyphicon glyphicon-print"></i>',
           '</a> '
            ].join('');

        }

        window.operateEvents = {
            'click .print': function (e, value, row, index) {
                //alert("print action");

                
                $currTable = $("#tableResult tr[data-index= '"+index+"' ] + tr table[tag=level2] ");
                alert($currTable[0].innerHTML);

                var $table = $('.tbLevel2');
                var selectedRows = $table.bootstrapTable('getSelections')

                $.ajax({
                    url: "/rp/GetPrintFile",
                    data: JSON.stringify({
                        selectedList: selectedRows
                    }),
                    type: "post",
                    async: false,
                    contentType: 'application/json',
                    success: function (obj) {
                        //debugger;
                        if (obj.Success) {
                            //debugger;
                            //window.location.href = obj.Data;
                            window.open(obj.Data);
                            //alert(obj.Msg)

                        }
                        else {
                            alert(obj.Msg);
                        }

                    },
                    error: function (obj) {
                        alert(obj.responseText);
                    }
                });
            }
        };

        function getLevel2Data(carCode, orderType,addr)
        {
            $.ajax({
                url: "/rp/GetWayBillDetailList",
                data: {
                    carCode:carCode,
                    orderType: orderType,
                    addr:addr
                },
                type: "post",
                async: false,
                success: function (obj) {
                    if (obj.Success) {
                        //debugger;
                        $scope.level2 = obj.Data;;

                    }
                    else {
                        alert(obj.Msg);
                    }

                },
                error: function (obj) {
                    alert(obj.responseText);
                }
            });
        }


    });

    //manual load app
    angular.bootstrap(document.getElementById("wbPrintBody"), ['wbPrintApp']);


</script>

