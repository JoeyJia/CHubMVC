        $('#stageDateControl').datetimepicker({
            format: 'yyyy-mm-dd',
            autoclose: true,
            minView: 'month',
            todayBtn: true,
            todayHighlight: true,
            initialDate:getDateString(new Date()),
            pickerPosition: "bottom-left"
        });
        //debugger;

        //$('#datetimepicker').datetimepicker('update', new Date());
        //var ss = getDateString(new Date());
        //$('#datetimepicker').attr("value", ss);
        //$('#datetimepicker').val(getDateString(new Date()));


    });

    function getDateString(date)
    {
        return date.getFullYear() + "-" + (date.getMonth() + 1) + "-" + date.getDate();
    }

</script>